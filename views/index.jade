html
  include ./head/head.jade
  body
    include ./nav/nav.jade

    div(class="container ad-wrap")
      div(style={height: '200px', background: '#00BFA5'})
        h1(style={'line-height': '200px', 'text-align': 'center', color: '#fff'}) 广告位
    div(class="container indentaion")
      div(class="row")
        div(class="col-md-2")
          ul(class="nav")
            each val in navs
              li
               a(href="#"+val.url)= val.name
        div(class="col-md-10")
          div(id="mainView")
            div(v-component="{{currentView}}")
    script(src="/bower_components/jquery/dist/jquery.min.js")
    script(src="/bower_components/bootstrap/dist/js/bootstrap.min.js")
    script(src="/bower_components/vue/dist/vue.js")
    script(src="https://rawgit.com/flatiron/director/master/build/director.min.js")
    script(src="/js/app-index.js")
    script(src="/app/app.js")
